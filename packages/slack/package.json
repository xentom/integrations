{
  "$schema": "https://assets.xentom.com/schemas/package.json",
  "name": "@xentom/slack",
  "version": "0.0.2",
  "displayName": "Slack",
  "description": "Automate Slack messaging workflows and manage workspace content from Xentom.",
  "categories": [
    "Messaging"
  ],
  "homepage": "https://xentom.com/integrations/xentom/slack",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xentom/integrations.git",
    "directory": "packages/slack"
  },
  "bugs": {
    "url": "https://github.com/xentom/integrations/issues"
  },
  "type": "module",
  "icon": "./assets/icon.png",
  "main": "./build/index.js",
  "scripts": {
    "lint": "biome lint --config-path ../../biome.json .",
    "format": "biome format --config-path ../../biome.json --write .",
    "typecheck": "tsc --noEmit",
    "clean": "git clean -xdf .cache .turbo node_modules build dist",
    "dev": "xentom dev",
    "build": "xentom build",
    "pack": "xentom pack",
    "publish": "xentom publish"
  },
  "dependencies": {
    "@slack/socket-mode": "^2.0.5",
    "@slack/web-api": "^7.12.0",
    "@xentom/integration-framework": "catalog:",
    "valibot": "catalog:"
  },
  "devDependencies": {
    "@xentom/style-guide": "catalog:",
    "@types/bun": "catalog:",
    "typescript": "catalog:",
    "@biomejs/biome": "catalog:"
  }
}
