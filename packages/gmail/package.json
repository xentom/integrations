{
  "$schema": "https://assets.xentom.com/schemas/package.json",
  "name": "@xentom/gmail",
  "version": "0.0.2",
  "displayName": "Gmail",
  "description": "Gmail integration for the Xentom workflow editor. Send, receive, and manage emails through Gmail's API with powerful workflow automation capabilities.",
  "categories": [
    "Experimental",
    "Messaging"
  ],
  "homepage": "https://xentom.com/integrations/xentom/gmail",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xentom/integrations.git",
    "directory": "packages/gmail"
  },
  "bugs": {
    "url": "https://github.com/xentom/integrations/issues"
  },
  "type": "module",
  "icon": "./assets/icon.png",
  "main": "./build/index.js",
  "scripts": {
    "lint": "eslint",
    "format": "prettier --write . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore",
    "typecheck": "tsc --noEmit",
    "clean": "git clean -xdf .cache .turbo node_modules build dist",
    "dev": "xentom dev",
    "build": "xentom build",
    "pack": "xentom pack"
  },
  "dependencies": {
    "@xentom/integration-framework": "catalog:",
    "google-auth-library": "10.3.0",
    "googleapis": "catalog:",
    "valibot": "catalog:"
  },
  "devDependencies": {
    "@xentom/style-guide": "catalog:",
    "@types/bun": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@xentom/style-guide/prettier"
}
