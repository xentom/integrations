    "build": "xentom build",
    "pack": "xentom pack",
    "publish": "xentom publish"
  },
  "dependencies": {
    "@xentom/integration-framework": "catalog:",
    "google-auth-library": "^10.3.0",
    "googleapis": "^159.0.0",
    "valibot": "catalog:"
  },
  "devDependencies": {
    "@xentom/style-guide": "catalog:",
    "@types/bun": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@xentom/style-guide/prettier"
