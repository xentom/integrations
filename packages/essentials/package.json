{
  "$schema": "https://assets.xentom.com/schemas/package.json",
  "name": "@xentom/essentials",
  "version": "0.0.2",
  "displayName": "Essentials",
  "description": "Add essentials to trigger workflows on schedules or manual runs and perform core actions like sending emails, making HTTP requests, or manipulating data.",
  "categories": [
    "Utilities"
  ],
  "homepage": "https://xentom.com/integrations/xentom/essentials",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xentom/integrations.git",
    "directory": "packages/essentials"
  },
  "bugs": {
    "url": "https://github.com/xentom/integrations/issues"
  },
  "type": "module",
  "icon": "./assets/icon.png",
  "main": "./build/index.js",
  "scripts": {
    "lint": "biome lint .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "clean": "git clean -xdf .cache .turbo node_modules build dist",
    "dev": "xentom dev",
    "build": "xentom build",
    "pack": "xentom pack",
    "publish": "xentom publish"
  },
  "dependencies": {
    "@xentom/integration-framework": "catalog:",
    "mime": "4.1.0",
    "valibot": "catalog:"
  },
  "devDependencies": {
    "@xentom/style-guide": "catalog:",
    "@types/bun": "catalog:",
    "typescript": "catalog:",
    "@biomejs/biome": "catalog:"
  }
}
