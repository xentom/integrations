{
  "$schema": "https://assets.xentom.com/schemas/package.json",
  "name": "@xentom/openai",
  "version": "0.0.2",
  "displayName": "OpenAI",
  "description": "Integrate OpenAI to trigger workflows from prompts or data inputs and generate text, summaries, or code using AI-powered actions.",
  "categories": [
    "AI"
  ],
  "homepage": "https://xentom.com/integrations/xentom/openai",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xentom/integrations.git",
    "directory": "packages/openai"
  },
  "bugs": {
    "url": "https://github.com/xentom/integrations/issues"
  },
  "type": "module",
  "icon": "./assets/icon.png",
  "main": "./build/index.js",
  "scripts": {
    "lint": "biome lint --config-path ../../biome.json .",
    "format": "biome format --config-path ../../biome.json --write .",
    "typecheck": "tsc --noEmit",
    "clean": "git clean -xdf .cache .turbo node_modules build dist",
    "dev": "xentom dev",
    "build": "xentom build",
    "pack": "xentom pack",
    "publish": "xentom publish"
  },
  "dependencies": {
    "@xentom/integration-framework": "catalog:",
    "mime": "4.1.0",
    "openai": "^6.9.0",
    "valibot": "catalog:",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@xentom/style-guide": "catalog:",
    "@types/bun": "catalog:",
    "typescript": "catalog:",
    "@biomejs/biome": "catalog:"
  }
}
